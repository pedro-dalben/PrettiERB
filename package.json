{
  "name": "prettierb",
  "displayName": "PrettiERB",
  "description": "Complete formatter and indenter for ERB (Embedded Ruby) files with intelligent indentation and Ruby code formatting",
  "version": "1.0.3",
  "publisher": "pedro-dalben",
  "icon": "logo.png",
  "author": {
    "name": "Pedro Dalben",
    "url": "https://github.com/pedro-dalben"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pedro-dalben/prettierb"
  },
  "bugs": {
    "url": "https://github.com/pedro-dalben/prettierb/issues"
  },
  "homepage": "https://github.com/pedro-dalben/prettierb#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "keywords": [
    "erb",
    "ruby",
    "rails",
    "formatter",
    "indentation",
    "beautify",
    "embedded ruby"
  ],
  "activationEvents": [
    "onLanguage:erb"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "erb",
        "aliases": [
          "ERB",
          "erb"
        ],
        "extensions": [
          ".erb",
          ".html.erb",
          ".text.erb",
          ".js.erb",
          ".css.erb"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "erb",
        "scopeName": "text.html.erb",
        "path": "./syntaxes/erb.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "erb",
        "path": "./snippets/erb.json"
      }
    ],
    "commands": [
      {
        "command": "prettierb.format",
        "title": "Format ERB Document",
        "category": "PrettiERB"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PrettiERB",
      "properties": {
        "erbFormatter.indentSize": {
          "type": "number",
          "default": 2,
          "description": "Número de espaços para indentação"
        },
        "erbFormatter.useTabs": {
          "type": "boolean",
          "default": false,
          "description": "Usar tabs ao invés de espaços"
        },
        "erbFormatter.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Formatar automaticamente ao salvar"
        },
        "erbFormatter.preserveBlankLines": {
          "type": "boolean",
          "default": true,
          "description": "Preservar linhas em branco"
        },
        "erbFormatter.logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error",
            "none"
          ],
          "default": "none",
          "description": "Nível de log para debugging (none por padrão)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha out/test/unit/**/*.test.js",
    "coverage": "nyc npm run test:unit"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^10.0.0",
    "@types/chai": "^4.3.0",
    "@types/glob": "^8.1.0",
    "glob": "^10.3.0",
    "@vscode/test-electron": "^2.3.0",
    "typescript": "^4.9.4",
    "mocha": "^10.0.0",
    "chai": "^4.3.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.0"
  }
}
