<div class="overflow-x-auto">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <% @columns.each do |column| %>
          <th scope="col"
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider <%= sortable_column_class(column) %>">
            <% if column[:sortable] %>
              <%= link_to column[:label],
                          sort_path(column[:key]),
                          class: "group inline-flex items-center space-x-1",
                          data: { turbo_frame: "table-content" } %>
            <% else %>
              <%= column[:label] %>
            <% end %>
          </th>
        <% end %>
        <th scope="col" class="relative px-6 py-3">
          <span class="sr-only">Ações</span>
        </th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% if @records.any? %>
        <% @records.each_with_index do |record, index| %>
          <tr class="<%= cycle('bg-white', 'bg-gray-50') %> hover:bg-gray-100 transition-colors"
              data-controller="row-actions"
              data-row-actions-id-value="<%= record.id %>">
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to record.name,
                          record_path(record),
                          class: "text-indigo-600 hover:text-indigo-900 font-medium" %>
            </td>
            
            <td class="px-6 py-4">
              <% if record.status == 'active' %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  <%= t("status.active") %>
                </span>
              <% elsif record.status == 'pending' %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                  <%= t("status.pending") %>
                </span>
              <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                  <%= t("status.#{record.status}") %>
                </span>
              <% end %>
            </td>

            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= time_ago_in_words(record.created_at) %> atrás
            </td>

            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <div class="flex items-center justify-end space-x-2">
                <% if can? :update, record %>
                  <%= link_to edit_record_path(record),
                              class: "text-indigo-600 hover:text-indigo-900",
                              title: "Editar" do %>
                    <%= inline_svg_tag "icons/edit.svg", class: "w-5 h-5" %>
                  <% end %>
                <% end %>

                <% if can? :destroy, record %>
                  <%= button_to record_path(record),
                                method: :delete,
                                class: "text-red-600 hover:text-red-900",
                                title: "Excluir",
                                form: { data: { turbo_confirm: "Tem certeza?" } } do %>
                    <%= inline_svg_tag "icons/trash.svg", class: "w-5 h-5" %>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="<%= @columns.size + 1 %>"
              class="px-6 py-12 text-center">
            <div class="flex flex-col items-center justify-center space-y-3">
              <%= inline_svg_tag "icons/empty-state.svg",
                                class: "w-16 h-16 text-gray-400" %>
              <p class="text-gray-500 text-sm">
                <%= t(".no_records_found") %>
              </p>
              <% if can? :create, @model_class %>
                <%= link_to t(".create_first"),
                            new_record_path,
                            class: "btn btn-primary" %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render "shared/pagination", records: @records %>

